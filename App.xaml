<Application x:Class="BonnyUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BonnyUI"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <LinearGradientBrush x:Key="background">
            <GradientStop Offset="0" Color="AliceBlue"/>
            <GradientStop Offset="5" Color="AliceBlue"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="backgroundNina">
            <GradientStop Offset="0" Color="PapayaWhip"/>
            <GradientStop Offset="1" Color="PaleTurquoise"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="backgroundMarc">
            <GradientStop Offset="0" Color="AliceBlue"/>
            <GradientStop Offset="5" Color="DarkBlue"/>
        </LinearGradientBrush>
    </Application.Resources>
</Application>
